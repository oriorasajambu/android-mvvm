<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/opensans_regular"
        android:maxLines="1"
        android:textColor="@color/md_theme_secondary"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/tv_value_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Label" />

    <TextView
        android:id="@+id/tv_value_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/md_theme_secondary"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/cl_optional_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label"
        app:layout_goneMarginBottom="10dp"
        tools:text="Value 1"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_optional_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_value_1">

        <TextView
            android:id="@+id/tv_value_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/md_theme_secondary"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tv_value_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Value 2"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_value_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/md_theme_secondary"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tv_value_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_value_2"
            tools:text="Value 3"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_value_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/md_theme_secondary"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/cl_optional_alt_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_value_3"
            tools:text="Value 4"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_optional_alt_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_value_4"
            app:layout_goneMarginTop="0dp">

            <TextView
                android:id="@+id/tv_alt_value_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/md_theme_secondary"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@id/tv_alt_value_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp"
                tools:text="Alt Value 1"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_alt_value_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/md_theme_secondary"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@id/tv_alt_value_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_alt_value_1"
                tools:ignore="SmallSp"
                tools:text="Alt Value 2"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_alt_value_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/md_theme_secondary"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@id/tv_alt_value_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_alt_value_2"
                tools:ignore="SmallSp"
                tools:text="Alt Value 3"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_alt_value_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/md_theme_secondary"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_alt_value_3"
                tools:ignore="SmallSp"
                tools:text="Alt Value 4"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>